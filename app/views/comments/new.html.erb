<h1>Create a new comment</h1>
<%= form_with model: Comment.new, method: :post, url: comments_path, local: true, scope: :comment do |form| %>
  <div class="form-group">
    <%= form.label :Comment %>
    <%= form.text_area :text, size:"100x3", class: "form-control" %>
    <%= form.hidden_field :post_id, value: @post.id %>
  </div>
  <% if flash.now[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>
  <% if flash.now[:notice] %> 
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <%= form.submit "Create Comment", class: "btn btn-primary" %>
<% end %>
